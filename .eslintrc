---
parser: babel-eslint
extends: airbnb-base
env:
  mocha: true
rules:
  indent:
    - 2
    - 2
    - SwitchCase: 1
  comma-dangle:
    - warn
    - always-multiline
  curly:
    - 2
    - all
  no-use-before-define:
    - 0
  consistent-return:
    - 2
  padded-blocks:
    - 0
  func-names:
    - 0
  object-curly-newline:
    - 0
  no-shadow:
    - 0
  no-param-reassign:
    - 0
  key-spacing:
    - 0
  no-loop-func:
    - 0
  no-console:
    - 0
  no-nested-ternary:
    - 0
  no-underscore-dangle:
    - 0
  no-continue:
    - 0
  import/no-extraneous-dependencies:
    - 0
  arrow-parens:
    - 0
  prefer-destructuring:
    - 0
  no-restricted-syntax:
    - 0
  no-restricted-globals:
    - 0
  brace-style:
    - warn
    - stroustrup
    - allowSingleLine: true
  no-await-in-loop:
    - 0
  function-paren-newline:
    - 1
    - consistent
  prefer-template:
    - 0
  object-shorthand:
    - 0
